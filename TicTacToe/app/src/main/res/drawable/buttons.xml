<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#de5be2"/>
            <corners android:radius="@dimen/radius_button"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:layout_width="wrap_content" android:layout_height="wrap_content">
            <solid android:color="#303f8f" />
            <corners android:radius="@dimen/radius_button" />
        </shape>
    </item>

<!--    En reposo      -->
    <item>
        <shape>
            <gradient
                android:startColor="#ddbfbf"
                android:endColor="#2c26da"
                android:angle="270"/>
            <corners android:radius="@dimen/radius_button" />
        </shape>
    </item>
</selector>
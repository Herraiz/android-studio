<resources>
    <!-- Base application theme. -->
    <style name="Theme.TicTacToe" parent="android:Theme.Holo.NoActionBar.Fullscreen" />

    <style name="title">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text</item>

    </style>

    <style name="button">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/min_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/min_button_height</item>

        <item name="android:layout_margin">@dimen/button_padding</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:onClick">playNow</item>

    </style>

    <style name="radius">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">@dimen/radius_button_text</item>
        <item name="android:alpha">0.8</item>

    </style>

    <style name="box">

        <item name="android:layout_width">@dimen/box</item>
        <item name="android:layout_height">@dimen/box</item>
        <item name="android:src">@drawable/box</item>
        <item name="android:onClick">tap</item>

    </style>

</resources>